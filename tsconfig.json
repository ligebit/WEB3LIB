{
    "compilerOptions": {
        "outDir": "dist",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "target": "ES2020",
        "module": "CommonJS",
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ],
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "*.spec.ts",
        "*.test.ts"
    ],
}